{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Arcade",
  "version": "1.0.0",
  "identifier": "com.michellesapp.Arcade",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "game",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/ArcadeIconLinux.png",
      "icons/ArcadeIconMac.icns",
      "icons/ArcadeIconWindows.ico"
    ]
  }
}
